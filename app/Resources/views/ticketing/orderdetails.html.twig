{% extends 'base.html.twig' %}

{% block title %}Récapitulatif de la commande {% endblock %}



{% block body %}



<!-- Main Content -->
<div class="container">
    <div class="row">

        <div class="col-lg-8 col-md-10 mx-auto">
            <h2>Récapitulatif de la commande</h2>
            <p>Vous avez réservez {{ booking.amount }} place(s) pour une {% if  booking.type == 'd' %} journée {% else %} demi-journée {%  endif %} pour le {{ booking.date|date("d m Y", "Europe/Paris") }}</p>
            <p>numéro de commande : {{ booking.numberOrder }}</p>
            <p><strong>Total de votre commande : {{ booking.totalPrice }} €</strong></p>
            {% for b in booking.informations %}

              <table>

                  <tr>
                      <td>
                          {{ b.name }} {{ b.firstName }} <br>
                          né(e) le {{ b.birthDate|date("d-m-y", "Europe/Paris") }} <br>
                          Réduction : {% if b.reducedPrice == '0'%} non {% else %} oui {% endif %}<br>
                          Prix du billet : {{ b.priceTicket }} €<br><br>

                      </td>
                  </tr>
              </table>

            {% endfor %}

        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">


            <form action="{{ path('payment', {'id':booking.id}) }}" method="POST">
                <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="pk_test_NC7ze8G5MOAacnimgpi36cZP"
                        data-label="Payer"
                        data-amount="{{ booking.totalPrice*100 }}"
                        data-name="Billeterie du Musée du Louvre"
                        data-description="Paiement"
                        data-locale="auto"
                        data-currency="eur">
                </script>
            </form>

        </div>

    </div>
</div>



    {% endblock %}


